{
  "compilerOptions": {
    "target": "ES6",
    "outDir": "build",
    "module": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "nodenext",
    "paths": {
      "@common/*": ["../common/src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "references": [{ "path": "../common" }]
}
